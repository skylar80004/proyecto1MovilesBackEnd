<% if signed_in? %>
<p id="notice"><%= notice %></p>

<h1>Photo Restaurants</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Image url</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photo_restaurants.each do |photo_restaurant| %>
      <tr>
        <td><%= photo_restaurant.image_url %></td>
        <td><%= photo_restaurant.restaurant.name %></td>
        <td><%= link_to 'Show', photo_restaurant %></td>
        <td><%= link_to 'Edit', edit_photo_restaurant_path(photo_restaurant) %></td>
        <td><%= link_to 'Destroy', photo_restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo Restaurant', new_photo_restaurant_path %>

<% end %>